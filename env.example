# Database (Use PostgreSQL for production on Vercel)
DATABASE_URL=postgresql://username:password@host:port/database

# JWT Configuration
SECRET_KEY=your-super-secret-key-change-this-in-production-please
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Admin credentials
ADMIN_USERNAME=admin
ADMIN_PASSWORD=your-secure-admin-password

# CORS Origins (Update with your actual domains)
FRONTEND_URL=https://your-frontend-domain.vercel.app
ADMIN_URL=https://your-admin-domain.vercel.app

# File upload
UPLOAD_DIR=/tmp/uploads
MAX_FILE_SIZE=5242880